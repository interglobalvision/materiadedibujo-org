// ******************************************************

// VARIABLES

$cols = 12
$col = 74px
$gutter = 14px

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-micro = ($gutter / (2 * $golden-ratio))
$margin-basic = golden-ratio($gutter , 1.3)
$margin-mid = golden-ratio($gutter , 2.3)
$margin-large = golden-ratio($gutter , 3.5)

$font-size-basic = 15px
$font-size-larger = 1.3rem
$font-size-smaller = .9rem


$font-size-h3 = 1.35rem
$font-size-h2 = golden-ratio(1rem , 1.2)
$font-size-h1 = golden-ratio(1rem , 1.5)

// ******************************************************

// GRID

.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)

.row
  clearfix()

.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  min-height: 1px

for col in 1..$cols
  .col-{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// ******************************************************

// TYPOGRAPHY

html
  font-size: $font-size-basic

  // HTML ELEMENT STYLING

h1
  font-size: $font-size-h1

h2
  font-size: $font-size-h2

h3
  font-size: $font-size-h3

h4
  font-size: $font-size-larger

  // FONT RULES

.font-larger
  font-size: $font-size-larger

.font-smaller
  font-size: $font-size-smaller

.font-small-caps
  font-size: 0.85em

// ******************************************************

// BASIC

#main-content
  margin-bottom: $margin-basic

// ******************************************************

// MARGINS AND PADDING

  // MARGIN TOP

.margin-top-micro
  margin-top: $margin-micro

.margin-top-tiny
  margin-top: $margin-tiny

.margin-top-small
  margin-top: $margin-small

.margin-top-basic
  margin-top: $margin-basic

.margin-top-mid
  margin-top: $margin-mid

.margin-top-large
  margin-top: $margin-large

  // MARGIN BOTTOM

.margin-bottom-micro
  margin-bottom: $margin-micro

.margin-bottom-tiny
  margin-bottom: $margin-tiny

.margin-bottom-small
  margin-bottom: $margin-small

.margin-bottom-basic
  margin-bottom: $margin-basic

.margin-bottom-mid
  margin-bottom: $margin-mid

.margin-bottom-large
  margin-bottom: $margin-large

  // PADDING TOP

.padding-top-micro
  padding-top: $margin-micro

.padding-top-tiny
  padding-top: $margin-tiny

.padding-top-small
  padding-top: $margin-small

.padding-top-basic
  padding-top: $margin-basic

.padding-top-mid
  padding-top: $margin-mid

.padding-top-large
  padding-top: $margin-large

  // PADDING BOTTOM

.padding-bottom-micro
  padding-bottom: $margin-micro

.padding-bottom-tiny
  padding-bottom: $margin-tiny

.padding-bottom-small
  padding-bottom: $margin-small

.padding-bottom-basic
  padding-bottom: $margin-basic

.padding-bottom-mid
  padding-bottom: $margin-mid

.padding-bottom-large
  padding-bottom: $margin-large

// ******************************************************

// HEADER

#header
  margin-bottom: $margin-mid

.single
  #header
    margin-bottom: $margin-mid - ($font-size-h3 * $font-leading-basic) - $margin-small

#menu
  li
    margin-right: $margin-micro