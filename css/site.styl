@import "kouto-swiss"

@import "helpers"
@import "genericons"

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// GRID

$cols = 12
$col = 84px
$gutter = 22px

.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)

.row
  clearfix()

.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  min-height: 1px

for col in 1..$cols
  .col-{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

    // FLUID COLS

.percent-col
  float: left
  box-sizing: border-box

$pcols = 10

for pcol in 1..$pcols
  .s-into-{pcol}
    width: ( 100% / pcol )

@media screen and (min-width: 601px)

  for pcol in 1..$pcols
    .m-into-{pcol}
      width: ( 100% / pcol )

@media screen and (min-width: 993px)

  for pcol in 1..$pcols
    .l-into-{pcol}
      width: ( 100% / pcol )

// ******************************************************

// VARIABLES

$golden-ratio = 1.61803398875

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-micro = ($gutter / (2 * $golden-ratio))
$margin-basic = golden-ratio($gutter , 1.3)
$margin-mid = golden-ratio($gutter , 2.3)
$margin-large = golden-ratio($gutter , 3.5)

$font-size-basic = 16px
$font-size-larger = 1.3rem
$font-size-smaller = .8rem
$font-size-h3 = 25px
$font-size-h2 = golden-ratio(1rem , 1.3)
$font-size-h1 = golden-ratio(1rem , 1.8)


$font-leading-basic = 1.5
$font-leading-larger = 1.65

$font-tracking-basic = 0.001em
$font-tracking-wider = 0.05em

$color-black-soft = rgb(14, 14, 14)
$color-white-soft = rgb(253, 253, 253)

// ******************************************************

// TYPOGRAPHY

html
  font-family: font-stack('Helvetica')
  font-size: $font-size-basic
  letter-spacing: $font-tracking-basic

body
  line-height: $font-leading-basic


  // HTML ELEMENT STYLING

h1
  font-size: $font-size-h1
  font-weight: bold
  margin: 0

h2
  font-size: $font-size-h2
  font-weight: bold

h3
  font-size: $font-size-h3

h4
  font-size: $font-size-larger

p
  margin-bottom: 1rem

  // FONT RULES

.font-larger
  font-size: $font-size-larger

.font-smaller
  font-size: $font-size-smaller

.font-leading-wider
  line-height: $font-leading-larger

.font-italic, em, i
  font-style: italic

.font-bold, strong, b
  font-weight: bold

.font-small-caps
  font-size: 0.85em
  text-transform: uppercase

.font-capitalize
  text-transform: capitalize

  // TEXT RULES

.text-overflow-ellipsis
  overflow: ellipsis

.text-align-left
  text-align: left

.text-align-right
  text-align: right

.text-align-center
  text-align: center

  // LISTS

ul
  margin-bottom: 1rem
  line-height: $font-leading-larger

  // COPY

.text-copy
  img
    margin: $margin-small 0
  .aligncenter
    margin: $margin-small auto
  h3,
  h4,
  h5,
  h6
    margin-bottom: 1rem
  a,
  a:active,
  a:visited
    text-decoration: underline
    &:hover
      text-decoration: none

  // LINKS

a,
a:active,
a:visited
  color: inherit
  text-decoration: none

// ******************************************************

// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

img
  max-width: 100%
  height: auto

#main-content
  margin-bottom: $margin-large

// ******************************************************

// MARGINS AND PADDING

  // MARGIN TOP

.margin-top-micro
  margin-top: $margin-micro

.margin-top-tiny
  margin-top: $margin-tiny

.margin-top-small
  margin-top: $margin-small

.margin-top-basic
  margin-top: $margin-basic

.margin-top-mid
  margin-top: $margin-mid

.margin-top-large
  margin-top: $margin-large

  // MARGIN BOTTOM

.margin-bottom-micro
  margin-bottom: $margin-micro

.margin-bottom-tiny
  margin-bottom: $margin-tiny

.margin-bottom-small
  margin-bottom: $margin-small

.margin-bottom-basic
  margin-bottom: $margin-basic

.margin-bottom-mid
  margin-bottom: $margin-mid

.margin-bottom-large
  margin-bottom: $margin-large

  // PADDING TOP

.padding-top-micro
  padding-top: $margin-micro

.padding-top-tiny
  padding-top: $margin-tiny

.padding-top-small
  padding-top: $margin-small

.padding-top-basic
  padding-top: $margin-basic

.padding-top-mid
  padding-top: $margin-mid

.padding-top-large
  padding-top: $margin-large

  // PADDING BOTTOM

.padding-bottom-micro
  padding-bottom: $margin-micro

.padding-bottom-tiny
  padding-bottom: $margin-tiny

.padding-bottom-small
  padding-bottom: $margin-small

.padding-bottom-basic
  padding-bottom: $margin-basic

.padding-bottom-mid
  padding-bottom: $margin-mid

.padding-bottom-large
  padding-bottom: $margin-large

// ******************************************************

// HEADER

#header
  margin-bottom: $margin-mid

.single
  #header
    margin-bottom: $margin-mid - ($font-size-h3 * $font-leading-basic) - $margin-small

#menu
  list-style: none
  li
    display: inline-block
    margin-right: $margin-micro
    a:after
      content: ','
    &:last-child
      a:after
        content: ''

// RESEARCH INDEX
.research-index
  a,
  a:active,
  a:visited
    color: inherit
    text-decoration: none



// ******************************************************

// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))

  @import "responsive/desktop-mid"

@media screen and (max-width: 1056px)

  @import "responsive/mobile"
